#!/usr/bin/make -f

DISTRIBUTION = $(shell lsb_release -sc)
VERSION = 3.1.2
PACKAGEVERSION = $(VERSION)-0~$(DISTRIBUTION)2
URL1 = https://github.com/projectcalico/cni-plugin/releases/download/v$(VERSION)/calico
URL2 = https://github.com/projectcalico/cni-plugin/releases/download/v$(VERSION)/calico-ipam
URL3 = https://github.com/projectcalico/calicoctl/releases/download/v$(VERSION)/calicoctl



%:
	dh $@

override_dh_auto_build:
	wget -N --progress=dot:mega $(URL1)
	wget -N --progress=dot:mega $(URL2)
	wget -N --progress=dot:mega $(URL3)

override_dh_link:

override_dh_gencontrol:
	dh_gencontrol -- -v$(PACKAGEVERSION)

override_dh_strip_nondeterminism:
